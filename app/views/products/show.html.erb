<!-- app/views/products/show.html.erb -->
<h1><%= @product.item_description %></h1>
<p><strong>Category:</strong> <%= @product.category %></p>
<p><strong>Brand:</strong> <%= @product.brand %></p>
<p><strong>Price:</strong> $<%= @product.price %></p>
<p><strong>Stock Quantity:</strong> <%= @product.stock_quantity %></p>
<p><strong>Sub Category:</strong> <%= @product.sub_category %></p>
<p><strong>Color:</strong> <%= @product.color %></p>
<p><strong>Storage Capacity:</strong> <%= @product.storage_capacity %></p>
<p><strong>Description:</strong> <%= @product.item_description %></p>
<%= image_tag @product.image_link if @product.image_link.present? %>

<%= link_to 'Back to Products List', products_path %>
