<div class="aspect-w-1 aspect-h-1 w-48 h-48 overflow-hidden rounded-md bg-gray-200 lg:aspect-none group-hover:opacity-75">
  <img src="<%= product.image_link %>" alt="<%= product.item_description %>" class="w-full h-full object-cover object-center lg:w-48 lg:h-48">
</div>
<div class="mt-4 flex flex-col">
  <h2 class="text-2xl font-bold text-gray-900 mb-2">$<%= product.price %></h2>
  <p class="text-sm text-gray-700 mb-1"><strong>Stock Quantity:</strong> <%= product.stock_quantity %></p>
  <p class="text-sm text-gray-700 mb-1"><strong>Brand:</strong> <%= product.brand %></p>
  <p class="text-sm text-gray-700 mb-1"><strong>Category:</strong> <%= product.category.name %></p>
  <p class="text-sm text-gray-700 mb-1"><strong>Sub Category:</strong> <%= product.sub_category %></p>
  <p class="text-sm text-gray-700 mb-1"><strong>Color:</strong> <%= product.color %></p>
  <p class="text-sm text-gray-700 mb-1"><strong>Storage Capacity:</strong> <%= product.storage_capacity %></p>
  <p class="text-sm text-gray-700 mb-1"><strong>SKU:</strong> <%= product.sku %></p>

  <%= form_with url: cart_items_path, method: :post, local: true do %>
    <%= hidden_field_tag :product_id, product.id %>
    <%= hidden_field_tag :quantity, 1 %>
    <div class="mt-4">
      <%= submit_tag 'Add to Cart', class: 'bg-green-500 text-white px-4 py-2 rounded' %>
    </div>
  <% end %>
</div>
