<!-- app/views/products/index.html.erb -->
<div class="bg-white">
  

    <% if @filtered_products.present? %>
      <div class="mt-10">
        <div class="grid grid-cols-1 gap-x-6 gap-y-10 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 xl:gap-x-8">
          <% @filtered_products.each do |product| %>
            <a href="<%= product_path(product) %>" class="group">
              <div class="aspect-w-1 aspect-h-1 w-48 h-48 overflow-hidden rounded-md bg-gray-200 lg:aspect-none group-hover:opacity-75">
                <img src="<%= product.image_link %>" alt="<%= product.item_description %>" class="w-full h-full object-cover object-center lg:w-48 lg:h-48">
              </div>
              <h3 class="mt-4 text-sm text-gray-700"><%= product.item_description %></h3>
              <p class="mt-1 text-lg font-medium text-gray-900">$<%= product.price %></p>
            </a>
          <% end %>
        </div>
      </div>
    <% end %>

    <div class="mt-10">
      <h1 class="text-2xl font-bold">Browse Products</h1>
      <div class="grid grid-cols-1 gap-x-6 gap-y-10 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 xl:gap-x-8">
        <% @all_products.each do |product| %>
          <a href="<%= product_path(product) %>" class="group">
            <div class="aspect-w-1 aspect-h-1 w-48 h-48 overflow-hidden rounded-md bg-gray-200 lg:aspect-none group-hover:opacity-75">
              <img src="<%= product.image_link %>" alt="<%= product.item_description %>" class="w-full h-full object-cover object-center lg:w-48 lg:h-48">
            </div>
            <h3 class="mt-4 text-sm text-gray-700"><%= product.item_description %></h3>
            <p class="mt-1 text-lg font-medium text-gray-900">$<%= product.price %></p>
            <p class="text-sm text-gray-700"><strong>Stock Quantity:</strong> <%= product.stock_quantity %></p>
            <p class="text-sm text-gray-700"><strong>Brand:</strong> <%= product.brand %></p>
            <p class="text-sm text-gray-700"><strong>Sub Category:</strong> <%= product.sub_category %></p>
            <p class="text-sm text-gray-700"><strong>Color:</strong> <%= product.color %></p>
            <p class="text-sm text-gray-700"><strong>Storage Capacity:</strong> <%= product.storage_capacity %></p>
            <p class="text-sm text-gray-700"><strong>SKU:</strong> <%= product.sku %></p>
          </a>
        <% end %>
      </div>
      <div class="mt-8">
        <%= paginate @all_products %>
      </div>
    </div>
  </div>
</div>
