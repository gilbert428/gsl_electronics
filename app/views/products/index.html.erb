<!-- app/views/products/index.html.erb -->
<div class="bg-white">
  <div class="mx-auto max-w-2xl px-4 py-16 sm:px-6 sm:py-24 lg:max-w-7xl lg:px-8">
    <h2 class="text-2xl font-bold tracking-tight text-gray-900">Our Products</h2>

    <% if @products.present? %>
      <div class="mt-6 grid grid-cols-1 gap-x-6 gap-y-10 sm:grid-cols-2 lg:grid-cols-4 xl:gap-x-8">
        <% @products.each do |product| %>
          <div class="group relative">
            <div class="aspect-w-1 aspect-h-1 w-full overflow-hidden rounded-md bg-gray-200 lg:aspect-none group-hover:opacity-75 lg:h-80">
              <img src="<%= product.image_link %>" alt="<%= product.item_description %>" class="h-full w-full object-cover object-center lg:h-full lg:w-full">
            </div>
            <div class="mt-4 flex justify-between">
              <div>
                <h3 class="text-sm text-gray-700">
                  <a href="<%= product_path(product) %>">
                    <span aria-hidden="true" class="absolute inset-0"></span>
                    <%= product.item_description %>
                  </a>
                </h3>
                <p class="mt-1 text-sm text-gray-500"><%= product.color %></p>
              </div>
              <p class="text-sm font-medium text-gray-900">$<%= product.price %></p>
            </div>
          </div>
        <% end %>
      </div>
      <div class="mt-8">
        <%= paginate @products %>
      </div>
    <% else %>
      <p class="text-gray-700 mt-10">No products found.</p>
    <% end %>
  </div>
</div>
