<!-- app/views/checkouts/show.html.erb -->

<div class="container mx-auto p-4">
  <h1 class="text-2xl font-bold mb-4">Checkout</h1>

  <% if @cart.cart_items.any? %>
    <table class="min-w-full bg-white">
      <thead>
        <tr>
          <th class="py-2">Product</th>
          <th class="py-2">Quantity</th>
          <th class="py-2">Price</th>
          <th class="py-2">Total</th>
        </tr>
      </thead>
      <tbody>
        <% @cart.cart_items.each do |item| %>
          <tr class="border-b">
            <td class="py-2 px-4"><%= item.product.item_description %></td>
            <td class="py-2 px-4"><%= item.quantity %></td>
            <td class="py-2 px-4"><%= number_to_currency(item.product.price) %></td>
            <td class="py-2 px-4"><%= number_to_currency(item.product.price * item.quantity) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <div class="mt-4">
      <p class="text-xl font-bold">Total: <%= number_to_currency(@cart.cart_items.sum { |item| item.product.price * item.quantity }) %></p>
    </div>

    <div class="mt-4 flex space-x-4">
      <%= link_to 'Proceed to Address', address_checkout_path, class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>
    </div>
  <% else %>
    <p class="text-gray-700">Your cart is empty.</p>
  <% end %>
</div>
