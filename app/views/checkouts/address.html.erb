<!-- app/views/checkouts/address.html.erb -->
<div class="container mx-auto p-4">
  <h1 class="text-2xl font-bold mb-4">Shipping Address</h1>
  <%= form_with(model: @address, url: confirm_checkouts_path, method: :post, local: true) do |f| %>
    <div>
      <%= f.label :address_line_1 %>
      <%= f.text_field :address_line_1, class: "form-input mt-1 block w-full" %>
    </div>
    <div>
      <%= f.label :address_line_2 %>
      <%= f.text_field :address_line_2, class: "form-input mt-1 block w-full" %>
    </div>
    <div>
      <%= f.label :city %>
      <%= f.text_field :city, class: "form-input mt-1 block w-full" %>
    </div>
    <div>
      <%= f.label :province %>
      <%= f.select :province, options_for_select(Tax.pluck(:province)), class: "form-select mt-1 block w-full" %>
    </div>
    <div>
      <%= f.label :postal_code %>
      <%= f.text_field :postal_code, class: "form-input mt-1 block w-full" %>
    </div>
    <div class="mt-4">
      <%= f.submit "Continue to Confirmation", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
    </div>
  <% end %>
</div>
