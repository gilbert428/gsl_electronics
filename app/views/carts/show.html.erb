<!-- app/views/carts/show.html.erb -->

<div class="container mx-auto p-4">
  <h1 class="text-2xl font-bold mb-4">Your Shopping Cart</h1>

  <% if @cart.cart_items.any? %>
    <table class="min-w-full bg-white">
      <thead>
        <tr>
          <th class="py-2">Product</th>
          <th class="py-2">Image</th>
          <th class="py-2">Quantity</th>
          <th class="py-2">Price</th>
          <th class="py-2">Total</th>
        </tr>
      </thead>
      <tbody>
        <% @cart.cart_items.each do |item| %>
          <tr class="border-b">
            <td class="py-2 px-4"><%= item.product.item_description %></td>
            <td class="py-2 px-4">
              <% if item.product.image.attached? %>
                <%= image_tag url_for(item.product.image.variant(resize_to_limit: [100, 100])), class: "w-16 h-16 object-cover" %>
              <% elsif item.product.image_link.present? %>
                <%= image_tag item.product.image_link, class: "w-16 h-16 object-cover" %>
              <% else %>
                <span class="text-gray-600">No Image</span>
              <% end %>
            </td>
            <td class="py-2 px-4"><%= item.quantity %></td>
            <td class="py-2 px-4"><%= number_to_currency(item.product.price) %></td>
            <td class="py-2 px-4"><%= number_to_currency(item.product.price * item.quantity) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="mt-4">
      <h2 class="text-xl font-bold">Total: <%= number_to_currency(@cart.cart_items.sum { |item| item.product.price * item.quantity }) %></h2>
    </div>
  <% else %>
    <p class="text-gray-600">Your cart is empty.</p>
  <% end %>

  <div class="mt-6">
    <%= link_to 'Continue Shopping', products_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  </div>
</div>
