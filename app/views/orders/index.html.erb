<!-- app/views/orders/index.html.erb -->
<div class="container mx-auto p-4">
  <h1 class="text-2xl font-bold mb-4">My Orders</h1>

  <% if @orders.any? %>
    <table class="min-w-full bg-white">
      <thead>
        <tr>
          <th class="py-2">Order ID</th>
          <th class="py-2">Total Price</th>
          <th class="py-2">Total Tax</th>
          <th class="py-2">Grand Total</th>
          <th class="py-2">Status</th>
          <th class="py-2">Order Date</th>
          <th class="py-2">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
          <tr class="border-b">
            <td class="py-2 px-4"><%= order.id %></td>
            <td class="py-2 px-4"><%= number_to_currency(order.total_price) %></td>
            <td class="py-2 px-4"><%= number_to_currency(order.total_tax_amount) %></td>
            <td class="py-2 px-4"><%= number_to_currency(order.total_price_with_tax) %></td>
            <td class="py-2 px-4"><%= order.status %></td>
            <td class="py-2 px-4"><%= order.order_date %></td>
            <td class="py-2 px-4"><%= link_to 'View', order_path(order), class: 'text-blue-500 hover:underline' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p class="text-gray-700">You have no orders yet.</p>
  <% end %>
</div>
